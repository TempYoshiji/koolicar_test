.row
  .col-md-10
    %h1= Rental.model_name.human.pluralize
  .col-md-2
    = link_to new_rental_path do
      .btn.btn-secondary= 'New'

%table.table.table-hover.table-bordered
  %thead
    %tr
      %th= 'id'
      %th{ style: 'width: 60%' }= Rental.human_attribute_name(:name)
      %th= Rental.human_attribute_name(:total_distance)
      %th{ style: 'width: 20%' }= 'Actions'
  %tbody
    - @rentals.each do |rental|
      %tr
        %td= rental.id
        %td= rental.name
        %td{ style: 'text-align: right;' }= rental.total_distance
        %td{ style: 'text-align: center;' }
          = link_to edit_rental_path(rental) do
            .btn.btn-secondary= 'Edit'
          = link_to(rental_path(rental), method: :delete, data: { confirm: 'Are you sure?' }) do
            .btn.btn-secondary= 'Delete'