= display_resource_errors(@rental_tracked_position)

= form_for [@rental, @rental_tracked_position] do |f|
  .form-group
    = f.label :rental
    = f.text_field :rental, value: @rental.name, class: 'form-control',disabled: true

  .form-group
    = f.label :tracked_at
    = f.datetime_field :tracked_at, class: 'form-control', placeholder: RentalTrackedPosition.human_attribute_name(:tracked_at)

  .form-group
    = f.label :latitude
    = f.number_field :latitude, step: 'any', class: 'form-control'

  .form-group
    = f.label :longitude
    = f.number_field :longitude, step: 'any', class: 'form-control'

  .form-group
    = f.submit 'Save', class: 'btn btn-secondary'
    = link_to rental_rental_tracked_positions_path(@rental) do
      .btn.btn-secondary= 'Cancel'
    - if @rental_tracked_position.persisted?
      = link_to rental_rental_tracked_position_path(@rental, @rental_tracked_position), method: :delete do
        .btn.btn-secondary= 'Delete'